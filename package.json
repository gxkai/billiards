{
    "name": "billiards",
    "description": "Billiards",
    "version": "0.3.0",
    "author": "tailuge",
    "main": "dist/main.js",
    "license": "GPL-3.0",
    "engines": {
        "yarn": "1.x"
    },
    "scripts": {
        "test": "jest --verbose",
        "coverage": "jest --coverage --coverageReporters json",
        "dev": "webpack ",
        "prettify": "prettier --write --no-semi {src,test}/**/*.[jt]s",
        "serve": "webpack serve --client-web-socket-url $(gp url 8080 | sed 's/http/ws/' | sed 's#$#/ws#')",
        "deps": "npx yarn-check --skip-unused",
        "websocket": "nodemon src/server/server.ts",
        "build": "pwd; cd server; pwd; yarn build",
        "start": "pwd; cd server; pwd; yarn install; yarn start"
    },
    "nodemonConfig": {
        "watch": [
            "src/server"
        ],
        "ext": "ts",
        "delay": "2",
        "execMap": {
            "ts": "ts-node"
        }
    },
    "dependencies": {
        "three": "^0.144.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.3",
        "@types/jest": "^29.0.3",
        "@types/three": "^0.144.0",
        "chai": "^4.3.6",
        "ini": "^3.0.1",
        "jest": "^29.0.3",
        "jest-environment-jsdom": "^29.0.3",
        "mocha": "^10.0.0",
        "node-notifier": "^10.0.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "ts-jest": "^29.0.2",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.3",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.11.1"
    }
}
